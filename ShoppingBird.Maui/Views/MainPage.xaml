<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ShopingBird.Maui.Controls;assembly=ShoppingBird.Controls"
             xmlns:viewModel="clr-namespace:ShopingBird.Maui.ViewModel"
             x:DataType="viewModel:MainViewModel"
             x:Class="ShoppingBird.Maui.MainPage">

    <ScrollView>
        <FlexLayout Direction="Row" Wrap="Wrap" AlignItems="Center" JustifyContent="Center" Padding="10" >

            <controls:ImageButton Caption="Cart" ImageSource="cart.png" TappedCommand="{Binding GotoCartViewCommand}"/>
            <controls:ImageButton Caption="Stores" ImageSource="store.png" TappedCommand="{Binding GotoStoresViewCommand}"/>
            <controls:ImageButton Caption="Items" ImageSource="items.png" TappedCommand="{Binding GotoItemsViewCommand}"/>
            <controls:ImageButton Caption="History" ImageSource="history.png" TappedCommand="{Binding GotoHistoryViewCommand}"/>
            <controls:ImageButton Caption="Store Prices" ImageSource="prices.png" TappedCommand="{Binding GotoStorePricesViewCommand}"/>

        </FlexLayout>
    </ScrollView>

</ContentPage>
