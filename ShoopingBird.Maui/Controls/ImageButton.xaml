<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoopingBird.Maui.Controls.ImageButton">
    <Frame WidthRequest="150" HeightRequest="150" Margin="5"
                   BackgroundColor="#FF5733"
                   CornerRadius="10"
                   BorderColor="#C70039"
                   HasShadow="False">
        
        <Grid x:Name="ButtonGrid">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="ButtonImage" Source="cart.png" Aspect="AspectFit" Margin="5" Grid.Row="0"/>
            <Label x:Name="CaptionLabel" Text="" Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    FontAttributes="None"
                    FontSize="Small"
                    Margin="5"/>

        </Grid>
    </Frame>
</ContentView>
